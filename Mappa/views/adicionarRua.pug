extends layout

block content
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
  script.
    $(document).ready(function() {
      $('#addInputBtn').click(function() {
        $('#inputContainer').append('<input type="file" name="images" id="images" class="w3-input w3-border">');
      });
    });

  h1 Adicionar uma nova entrada
  if failed != null
    if failed
      h5.w3-text-red= mensagem_erro
    else
      h5.w3-text-green Registo submetido com sucesso!
  form.w3-container.w3-card-4.w3-round-large.w3-padding(action='add/upload' method='post' enctype='multipart/form-data' style='margin-bottom: 50px;')
    .w3-section
      label.w3-label(for='file') Carregue o ficheiro zip:
      input.w3-input.w3-border(type='file' name='file' id='file' accept='.zip' required)
    .w3-section
      button.w3-button.w3-amber.w3-round-large(type='submit') Upload